+++ src/Mesa-8.0.5/configure.ac	2013-09-21 02:38:55.190200000 +0100
@@ -215,7 +215,7 @@ solaris*)
     DEFINES="$DEFINES -DPTHREADS -DSVR4"
     ;;
 cygwin*)
-    DEFINES="$DEFINES -D_GNU_SOURCE -DPTHREADS"
+    DEFINES="$DEFINES -D_GNU_SOURCE -D_XOPEN_SOURCE=500 -DPTHREADS"
     VISIBILITY_CFLAGS=""
     VISIBILITY_CXXFLAGS=""
     ;;
