NAME="mesa"
VERSION=10.3.7
RELEASE=1
CATEGORY="Libs"
SUMMARY="X11 OpenGL implementation"
DESCRIPTION="Mesa is an open-source implementation of the OpenGL specification,
a system for rendering interactive 3D graphics. A variety of device drivers
allows Mesa to be used in many different environments ranging from software
emulation to complete hardware acceleration for modern GPUs."
HOMEPAGE="http://www.mesa3d.org/"
SRC_URI="ftp://ftp.freedesktop.org/pub/mesa/${VERSION}/MesaLib-${VERSION}.tar.bz2"
SRC_DIR="Mesa-${VERSION}"
PATCH_URI="
	0001-glx-Fix-build-since-679c2ef.patch
	0006-Fixes-for-building-with-enable-egl-enable-gallium-eg.patch
	0007-osmesa-is-not-a-module.patch
	0008-Use-.so-extension-for-egl_gallium.patch
	0011-Massage-server-fbconfigs-to-make-them-more-likely-to.patch
	0016-Add-Windows-DRI.patch
	0017-For-testing-purposes-only-use-Windows-DRI-if-explici.patch
	0018-Windows-DRI-fixes.patch
	8.0.2-cygwin-soname.patch
	10.3.3-cygwin-shared-llvm.patch
	10.3.3-drivers-no-undefined.patch
"

# created by patches
DISTCLEANFILES="src/glx/dri_common_query_renderer.c src/glx/driwindows_glx.c src/glx/windows/*"

DEPEND="pkgconfig(glproto)
	pkgconfig(x11)
	pkgconfig(x11-xcb)
	pkgconfig(xcb-glx)
	pkgconfig(xext)
	pkgconfig(xfixes)
	pkgconfig(xdamage)
	libexpat-devel
	libllvm-devel
"

