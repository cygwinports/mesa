windowsdriproto_CONTENTS="usr/include/X11/ usr/lib/pkgconfig/windowsdriproto.pc"

DIFF_EXCLUDES="docs *.c.out"

src_compile() {
	cd ${S}
	cygautoreconf
	cd ${B}
	cygconf \
		--enable-shared --disable-static \
		--enable-shared-glapi \
		--disable-asm \
		--enable-dri --disable-dri3 --enable-driglx-direct \
		--enable-egl \
		--enable-gallium-llvm --enable-llvm-shared-libs \
		--enable-gles1 \
		--enable-gles2 \
		--enable-glx \
		--enable-glx-tls \
		--enable-openvg \
		--enable-osmesa \
		--enable-texture-float \
		--disable-xlib-glx \
		--with-dri-drivers=swrast \
		--with-gallium-drivers=swrast \
		--enable-gallium-egl

	cygmake
}

src_install() {
	cd ${B}
	dodir /usr/bin
	cyginstall

	cd ${S}/docs
	dodoc COPYING README.CYGWIN libGL.txt

	docinto html
	dodoc *.html *.css *.png specs specs/old relnotes
}

# cannot use the default src_test, as 'make -n check' fails the first time as
# there are no proper dependencies on src/gtest, so provide our own.
src_test() {
	cd ${B}
	make check
}

KEEP_LA_FILES="none"
